@page "/deleteHouse/{id:int}"


<div class="row">

    <div class="col">
        <div class="card mb-2">
            <div class="card-header">
                <h5>Delete House</h5>
            </div>
            <div class="card-body text-white bg-danger">

                <div class="form-group">
                    <label class="control-label">Address</label>
                    <div class="input-group">
                        <label class="form-control">@House.Address1</label>
                        <div class="input-group-append">
                            <span class="input-group-text" id="basic-addon2"><span class="fa fa-road"></span></span>
                        </div>
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <div class="input-group">
                            <label class="form-control">@House.Address2</label>
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2"><span class="fa fa-road"></span></span>
                            </div>

                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <div class="input-group">
                            <label class="form-control">@House.Address3</label>
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2"><span class="fa fa-road"></span></span>
                            </div>

                        </div>
                    </div>
                </div>

                <hr style="margin:6px" />
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label">Tenant</label>
                        <div class="input-group">
                            <label class="form-control">@House.Tenant1</label>
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2"><span class="fa fa-user-edit"></span></span>
                            </div>

                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="House.Tenant2" class="control-label">Tenant 2</label>
                        <div class="input-group">
                            <label class="form-control">@House.Tenant2</label>
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2"><span class="fa fa-user-edit"></span></span>
                            </div>

                        </div>
                    </div>
                </div>
                <hr style="margin:6px" />

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="House.Rent" class="control-label"></label>
                        <div class="input-group">
                            <label class="form-control">@House.Rent</label>
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2"><span class="fa fa-pound-sign"></span></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="House.Deposit" class="control-label"></label>
                        <div class="input-group">
                            <label class="form-control">@House.Deposit</label>
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2"><span class="fa fa-pound-sign"></span></span>
                            </div>

                        </div>
                    </div>
                </div>
                <hr style="margin:6px" />
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="House.Mobile" class="control-label"></label>
                        <div class="input-group">
                            <label class="form-control">@House.Mobile</label>
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2"><span class="fa fa-mobile-alt"></span></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="House.Email" class="control-label"></label>
                        <div class="input-group">
                            <label class="form-control">@House.Email</label>
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2"><span class="fa fa-envelope"></span></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <div class="row">
                    <div class="col">
                        <button @onclick="HandleVilidDelete" class="btn btn-danger">Delete</button>
                    </div>
                    <div class="col pull-right">
                        <a href="listhomes" class="btn btn-primary float-right">Back to List</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

