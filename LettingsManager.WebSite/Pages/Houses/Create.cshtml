                        </div>
                    </div>
                    <hr style="margin:6px" />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="House.DateFrom" class="control-label"></label>
                            <div class="input-group date" data-provide="datepicker">
                                <input type="text" asp-for="House.DateFrom" asp-format="{0:dd'/'MM'/'yyyy}" class="form-control">
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2"><span class="fa fa-calendar"></span></span>
                                    @*<span class="fas fa-calendar"></span>*@
                                </div>
                            </div>
                            <span asp-validation-for="House.DateFrom" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="House.DateTo" class="control-label"></label>
                            <div class="input-group date" data-provide="datepicker">
                                <input type="text" asp-for="House.DateTo" asp-format="{0:dd'/'MM'/'yyyy}" class="form-control">
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2"><span class="fa fa-calendar"></span></span>
                                </div>
                            </div>
                            <span asp-validation-for="House.DateTo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="House.LandlordId" class="control-label"> Landlord Name</label>
                        <div class="input-group">
                            <select asp-for="House.LandlordId" class="form-control" asp-items="ViewBag.LandlordId"></select>
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2"><span class="fa fa-user-tie"></span></span>
                            </div>
                        </div>
                        <span asp-validation-for="House.LandlordId" class="text-danger"></span>
                    </div>
                    <hr style="margin:6px" />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="House.Rent" class="control-label"></label>
                            <div class="input-group">
                                <input asp-for="House.Rent" class="form-control" />
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2"><span class="fa fa-pound-sign"></span></span>
                                </div>
                                
                            </div>
                            <span asp-validation-for="House.Rent" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="House.Deposit" class="control-label"></label>
                            <div class="input-group">
                                <input asp-for="House.Deposit" class="form-control" />
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2"><span class="fa fa-pound-sign"></span></span>
                                </div>
                                
                            </div>
                            <span asp-validation-for="House.Deposit" class="text-danger"></span>
                        </div>
                    </div>
                    <hr style="margin:6px" />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="House.Mobile" class="control-label"></label>
                            <div class="input-group">
                                <input asp-for="House.Mobile" class="form-control" />
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2"><span class="fa fa-mobile-alt"></span></span>
                                </div>
                                
                            </div>
                            <span asp-validation-for="House.Mobile" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="House.Email" class="control-label"></label>
                            <div class="input-group">
                                <input asp-for="House.Email" class="form-control" />
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2"><span class="fa fa-envelope"></span></span>
                                </div>
                            </div>
                            <span asp-validation-for="House.Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="row">
                        <div class="col">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                        <div class="col pull-right">
                            <a asp-page="./Index" class="btn btn-primary float-right">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>

