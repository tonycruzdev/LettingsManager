@page
@model LettingsManager.WebSite.Houses.CreateModel

@{
    ViewData["Title"] = "Create";
}
<link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker.css" rel="stylesheet" />
<form method="post">
    <div class="row">

        <div class="col">
            <div class="card mb-2">
                <div class="card-header">
                    <h5>Edit Home</h5>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="House.Address1" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="House.Address1" class="form-control" />
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2"><span class="fa fa-road"></span></span>
                            </div>

                        </div>
                        <span asp-validation-for="House.Address1" class="text-danger"></span>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <div class="input-group">
                                <input asp-for="House.Address2" class="form-control" />
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2"><span class="fa fa-road"></span></span>
                                </div>
                            </div>
                            <span asp-validation-for="House.Address2" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <div class="input-group">
                                <input asp-for="House.Address3" class="form-control" />
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2"><span class="fa fa-road"></span></span>
                                </div>
                                <span asp-validation-for="House.Address3" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <div class="input-group">
                                <input asp-for="House.Address4" class="form-control" />
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2"><span class="fa fa-road"></span></span>
                                </div>
                            </div>
                            <span asp-validation-for="House.Address4" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <div class="input-group">
                                <input asp-for="House.Address5" class="form-control" />
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2"><span class="fa fa-road"></span></span>
                                </div>
                                
                            </div>
                            <span asp-validation-for="House.Address5" class="text-danger"></span>
                        </div>
                    </div>
                    <hr style="margin:6px" />
